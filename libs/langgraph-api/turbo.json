{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "test": {
      "with": ["start", "start:auth"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build", "build"]
    },
    "start:auth": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build", "build"]
    }
  }
}
