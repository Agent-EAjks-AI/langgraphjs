{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["**/dist/**"]
    },
    "build:internal": {
      "dependsOn": ["^build:internal"],
      "outputs": ["**/dist/**"]
    },
    "test": {
      "with": ["start", "start:auth"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build:internal", "build:internal"]
    },
    "start:auth": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build:internal", "build:internal"]
    }
  }
}
